[colors]
background = #000000
foreground = #999

[bar/top]
monitor = ${env:MONITOR}
width = 100%
height = 30
offset-x = 0
offset-y = 0
font-0 = "Droid Sans:pixelsize=10:weight=bold;2"

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2
underline-color = #fcefce

spacing = 1
padding = 1

modules-left = battery wired-network wireless-network cpu ram
modules-center = i3
modules-right = date clock

tray-position = right
tray-maxsize = 16


[module/cpu]
type = internal/cpu

[module/battery]
type = internal/battery
time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%
label-full = Fully charged

[module/wired-network]
type = internal/network
interface = enp2s0
[module/wireless-network]
type = internal/network
#interface = wlan1



[module/i3]
type = internal/i3
strip-wsnumbers = true
pin-workspaces = true
wrapping-scroll = true

format = <label-state> <label-mode>

label-mode = %mode%
#label-mode-padding = 2
label-mode-background = #e60053
label-mode-font = 0

label-focused = %name%
label-focused-background = #383838
label-focused-foreground = #fff
label-focused-overline = #f90
label-focused-underline = #f90
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-urgent = %name%!
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-visible = %name%
label-visible-padding = 2

[module/date]
type = internal/date
interval = 1.0

label = %date%, %time%

date = "%a %B %d"
date-alt = "%d-%m-%Y"

time = "%I:%M %p"
time-alt = "%H:%M"

[settings]
screenchange-reload = true
