# <clientclass>           <border>   <bg>     <text>    <indicator>
client.focused            $base02    $base02  $base06   $base00
client.focused_inactive   $base00    $base00  $base06   #000000
client.unfocused          $base00    $base00  $base06   #000000
client.urgent             $base03    $base03  $base06   $base00

bar {
  status_command i3blocks
  separator_symbol â€¢
  height 28
  tray_output eDP1
  tray_padding 6

  colors {
    background		$base01
    separator		$base03
    statusline		$base05

    # <workclass>          <border>     <bg>        <text>
    focused_workspace      $base01      $base01     $base05
    inactive_workspace     $base01      $base01     $base03
    active_workspace       $base01      $base01     $base03
    urgent_workspace       $base08      $base08     $base05
    binding_mode           $base08      $base08     $base05
  }
}

